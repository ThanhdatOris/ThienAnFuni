<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/customerThienAn/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/customerThienAn/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    @* <div id="preloder">
    <div class="loader"></div>
    </div> *@
    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="@Url.Action("Index", "Home")"><img src="/customerThienAn/img/logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
            </ul>
            <div class="header__cart__price">item: <span>$150.00</span></div>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="/customerThienAn/img/vietnamese.jpg" width="20" alt="">
                <div>Vietnamese</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="#">Vietnamese</a></li>
                </ul>
            </div>
            <div class="header__top__right__auth">
                <a href="@Url.Action("Login", "Home")"><i class="fa fa-user"></i> Login</a>
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                @* Thêm Action*@

                <li class="active">
                    <a class="app-nav__item" href="@Url.Action("Index", "Home")">Trang chủ</a>
                </li>
                <li><a asp-action="Shop">Shop</a></li>
                <li><a href="./shop-grid.html">Đơn hàng</a></li>
            @*     <li>
                    <a href="#">Danh mục</a>
                    <ul class="header__menu__dropdown pl-3">
                        <li><a href="./shop-details.html">Shop</a></li>
                    </ul>
                </li> *@

                <li><a asp-controller="adminProducts" asp-action="Index">Liên hệ</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> funiteam@ctuet.edu.vn</li>
                <li>Giao hàng miễn phí vận chuyển nội thành.</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>
                                <li><i class="fa fa-envelope"></i> funiteam@ctuet.edu.vn</li>
                                <li>Giao hàng miễn phí vận chuyển nội thành.</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-pinterest-p"></i></a>
                            </div>
                            <div class="header__top__right__language">
                                <img src="/customerThienAn/img/vietnamese.jpg" width="30" alt="">
                                <div>Vietnamese</div>
                                <span class="arrow_carrot-down"></span>
                                <ul>
                                    <li><a href="#">Vietnamese</a></li>
                                </ul>
                            </div>
                            <div class="header__top__right__auth">
                                @* Check logic nếu Login thì hiện Logout và ngược lại *@
                                <a href="@Url.Action("Login", "Home")"><i class="fa fa-user"></i> Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="@Url.ActionLink("Index","Home")"><img src="/customerThienAn/img/logo.png" alt="Logo FuniShop"></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        @* Bê thằng ở trên xuống *@
                        <ul>
                            <li class="active"><a href="@Url.ActionLink("Index","Home")">Trang chủ</a></li>
                            <li><a asp-action="Shop">Shop</a></li>
                            <li><a href="./contact.html">Đơn hàng</a></li>
                            <li><a href="./contact.html">Liên hệ</a></li>
                            <li><a asp-controller="adminProducts" asp-action="Index">Admin</a></li>

                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        @* Bê thằng ở trên xuống *@
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                            <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
                        </ul>
                        <div class="header__cart__price">item: <span>$150.00</span></div>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin hero-normal-->
    <section class="hero @(Context.Request.Path == "/" ? "" : "hero-normal")">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục</span>
                        </div>

                        @await Component.InvokeAsync("CategoryHero")

                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            @* Xử lý tìm kiếm, cho nó sang 1 page riêng *@
                            <form action="#">
                                @*<div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                                </div> *@
                                <input type="text" name="query" placeholder="Bạn muốn tìm gì?"
                                       value="">
                                <button type="submit" class="site-btn">Tìm kiếm</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+84 30 04 1975</h5>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                    @* renderSection *@
                    @RenderSection("background_home", required: false)
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    @RenderSection("breadcrumb", required: false)
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a href="./index.html"><img src="/customerThienAn/img/logo.png" alt=""></a>
                        </div>
                        <ul>
                            <li>Address: 256 Nguyễn Văn Cừ, An Hòa, Ninh Kiều, Cần Thơ</li>
                            <li>Phone: +84 30 04 1975</li>
                            <li>Email: funiteam@ctuet.edu.vn</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <h6>Chính sách</h6>
                        <ul class="w-100">
                            <li><a href="#">Hướng Dẫn Mua Hàng</a></li>
                            <li><a href="#">Chính sách bảo mật dữ liệu</a></li>
                            <li><a href="#">Chính sách xử lý dữ liệu cá nhân</a></li>
                            <li><a href="#">Chính sách bảo hành</a></li>
                            <li><a href="#">Chính sách bán hàng</a></li>
                            <li><a href="#">Chính sách kiểm hàng</a></li>
                            <li><a href="#">Chính sách đổi trả</a></li>
                            <li><a href="#">Chính sách hoàn tiền</a></li>
                            <li><a href="#">Quy chế hoạt động</a></li>
                            <li><a href="#">Chính sách vận chuyển</a></li>
                            <li>
                                <a href="#">Chính sách giao hàng và thanh toán</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <h6>Liên hệ</h6>
                        <p>Nhận thông tin cập nhật qua Email về cửa hàng mới nhất của chúng tôi và các ưu đãi đặc biệt.</p>
                        <form action="#">
                            <input type="text" placeholder="Địa chỉ mail của bạn">
                            <button type="submit" class="site-btn">Đăng ký</button>
                        </form>
                        <div class="footer__widget__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__copyright">
                        <div class="footer__copyright__text">
                            <p>
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> | Bản quyền được giữ bởi FuniTeam
                            </p>
                        </div>
                        <div class="footer__copyright__payment"><img src="/customerThienAn/img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Js Plugins -->
    <script src="/customerThienAn/js/jquery-3.3.1.min.js"></script>
    <script src="/customerThienAn/js/bootstrap.min.js"></script>
    <script src="/customerThienAn/js/jquery.nice-select.min.js"></script>
    <script src="/customerThienAn/js/jquery-ui.min.js"></script>
    <script src="/customerThienAn/js/jquery.slicknav.js"></script>
    <script src="/customerThienAn/js/mixitup.min.js"></script>
    <script src="/customerThienAn/js/owl.carousel.min.js"></script>
    <script src="/customerThienAn/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
