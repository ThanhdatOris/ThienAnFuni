    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="@Url.Action("Index", "Home")"><img src="/customerThienAn/img/logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li>
                    <a asp-controller="Cart" asp-action="Index">
                        <i class="fa fa-shopping-bag"></i>
                        <span class="span__quantity_cart">
                            @Context.Session.GetCustomInt32("totalQuantity")
                        </span>
                    </a>
                </li>
            </ul>

            <div class="header__cart__price">
                Tổng tiền:
                <span>
                    @Context.Session.GetDecimal("total").ToString("N0", new
                             System.Globalization.CultureInfo("vi-VN"))đ
                </span>
            </div>

        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <img src="/customerThienAn/img/vietnamese.jpg" width="20" alt="">
                <div>Vietnamese</div>
                @* <span class="arrow_carrot-down"></span> *@
                <ul>
                    <li><a href="#">Vietnamese</a></li>
                </ul>
            </div>

            <div class="header__top__right__auth">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Profile" class="d-inline-block text-truncate" style="max-width: 150px;">
                        <span>Hi, @User.Identity.Name</span>
                    </a>

                    @if (User.IsInRole(ConstHelper.RoleManager) && User.IsInRole(ConstHelper.RoleSaleStaff))
                    {
                        <!-- Nút Admin sẽ chỉ hiển thị nếu người dùng là Admin -->
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                            <i class="fa fa-cogs"></i> Admin Dashboard
                        </a>
                    }

                    <form action="@Url.Action("Logout", "Account")" method="post" style="display:inline;">
                        <button type="submit" class="btn p-1 text-danger font-weight-bold">
                            <i class="fa fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")"><i class="fa fa-user"></i> Login</a>
                }
            </div>

        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                    <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Shop"  ? "active" : "")">
