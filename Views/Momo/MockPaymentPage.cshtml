@{
    ViewData["Title"] = "Mock Payment Page";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Trang Thanh Toán Mock</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5>Thông tin đơn hàng:</h5>
                        <p><strong>Mã đơn hàng:</strong> @ViewBag.OrderId</p>
                        <p><strong>Số tiền:</strong> @String.Format("{0:N0}", ViewBag.Amount) VNĐ</p>
                        <p><strong>Thông tin:</strong> @ViewBag.OrderInfo</p>
                    </div>

                    <div class="alert alert-warning">
                        <strong>Chú ý:</strong> Đây là trang thanh toán giả lập để test. 
                        Chọn hành động bên dưới để mô phỏng kết quả thanh toán.
                    </div>

                    <form asp-action="ProcessMockPayment" method="post">
                        <input type="hidden" name="orderId" value="@ViewBag.OrderId" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="success" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Thanh Toán Thành Công
                            </button>
                            
                            <button type="submit" name="action" value="cancel" class="btn btn-danger btn-lg">
                                <i class="fas fa-times-circle"></i> Hủy Thanh Toán
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("CreatePayment", "Momo")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }
    
    .btn-lg {
        padding: 12px 24px;
        font-size: 18px;
        margin-bottom: 10px;
    }
    
    .btn-success:hover {
        background-color: #28a745;
        transform: translateY(-1px);
        transition: all 0.2s;
    }
    
    .btn-danger:hover {
        background-color: #dc3545;
        transform: translateY(-1px);
        transition: all 0.2s;
    }
</style>
