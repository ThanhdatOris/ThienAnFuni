@model ThienAnFuni.Models.SaleStaff

@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="app-title">
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item active"><a href="#"><b>Quản lý nhân viên</b></a></li>
    </ul>
    <div id="clock"></div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                        <a class="btn btn-add btn-sm" asp-action="Create" title="Thêm nhân viên mới">
                            <i class="fas fa-plus"></i>
                            Thêm nhân viên mới
                        </a>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-danger btn-sm" asp-action="ListDeleted" title="DS nhân viên nghĩ việc">
                            <i class="fa fa-trash"></i>
                            DS nhân viên nghĩ việc
                        </a>
                    </div>
                        @if(Model.IsActive == true){
                        <div class="col-sm-2">
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model?.Id" title="Cập nhật thông tin nhân viên hiện tại">
                                <i class="fa fa-edit"></i>
                                Cập nhật thông tin nhân
                            </a>
                        </div>
                    }
                </div>
                @{
                    var errorMessage = TempData["ErrorMessage"] as string;
                    if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger bg-danger">
                            @errorMessage
                        </div>
                    }
                }
                <h3 class="text-center">Thông tin nhân viên</h3>
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.CitizenId)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CitizenId)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.IssuingDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Model.IssuingDate?.ToString("dd-MM-yyyy")
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.IssuingPlace)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IssuingPlace)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </dt>
                   <dd class="col-sm-9">
                        @Model.StartDate?.ToString("dd-MM-yyyy")
                   </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EndDate)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Degree)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Degree)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd class="col-sm-9">
                        @Model.UserName
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.DateOfBirth)
                    </dd>
@* 
                    <dt class="col-sm-3 font-weight-bold">
                        Mật khẩu
                    </dt>
                    <dd class="col-sm-9">
                        ******************
                    </dd> *@
                </dl>


            </div>
        </div>
    <div class="form-group">
        <a class="btn btn-dark" asp-action="Index"> Trở về</a>
    </div>
    </div>
</div>

@section Scripts {
    <script src="/adminThienAn/js/heper-upImg_Time.js"></script>
}