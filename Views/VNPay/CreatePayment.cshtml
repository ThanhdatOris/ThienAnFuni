@{
    ViewData["Title"] = "Thanh Toán VNPay";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card"></i> Thanh Toán VNPay
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle"></i> Thông tin test VNPay (Môi trường Sandbox):</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Ngân hàng NCB - Thẻ nội địa:</h6>
                                <ul>
                                    <li><strong>Số thẻ:</strong> 9704198526191432198</li>
                                    <li><strong>Tên chủ thẻ:</strong> NGUYEN VAN A</li>
                                    <li><strong>Ngày phát hành:</strong> 07/15</li>
                                    <li><strong>Mật khẩu OTP:</strong> 123456</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6>Tài khoản VNPay Test:</h6>
                                <ul>
                                    <li><strong>Terminal ID:</strong> 95MBFDIE</li>
                                    <li><strong>Demo:</strong> <a href="https://sandbox.vnpayment.vn/apis/vnpay-demo/"
                                            target="_blank">VNPay Demo</a></li>
                                    <li><strong>Môi trường:</strong> Sandbox</li>
                                    <li><strong>URL:</strong> sandbox.vnpayment.vn</li>
                                </ul>
                            </div>
                        </div>
                        <div class="alert alert-success mt-2 mb-0">
                            <small><strong>Lưu ý:</strong> Đây là môi trường test chính thức của VNPay với Terminal ID
                                thật. Giao dịch sẽ được xử lý như thật nhưng không trừ tiền thực tế.</small>
                        </div>
                    </div>

                    <form asp-action="CreatePayment" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="amount" class="form-label">
                                        <i class="fas fa-money-bill"></i> Số tiền (VNĐ):
                                    </label>
                                    <input type="number" id="amount" name="amount" class="form-control" value="50000"
                                        min="10000" required />
                                    <small class="text-muted">Tối thiểu 10,000 VNĐ</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="orderInfo" class="form-label">
                                        <i class="fas fa-info"></i> Thông tin đơn hàng:
                                    </label>
                                    <input type="text" id="orderInfo" name="orderInfo" class="form-control"
                                        value="Thanh toan don hang qua VNPay" required />
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card"></i> Thanh toán với VNPay
                            </button>
                        </div>
                    </form>

                    <hr>

                    <div class="text-center">
                        <h6 class="text-muted">Hoặc chọn phương thức khác:</h6>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("CreatePayment", "Momo")" class="btn btn-outline-danger">
                                <i class="fab fa-monero"></i> Momo
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 10px;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 18px;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        transition: all 0.2s;
    }

    .alert-info {
        border-left: 4px solid #17a2b8;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }
</style>

                                           
                               
                                       
                                       